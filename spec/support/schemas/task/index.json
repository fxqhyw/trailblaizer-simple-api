{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "data",
    "jsonapi"
  ],
  "properties": {
    "data": {
      "$id": "#/properties/data",
      "type": "array",
      "title": "The Data Schema",
      "items": {
        "$id": "#/properties/data/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "id",
          "type",
          "attributes",
          "links"
        ],
        "properties": {
          "id": {
            "$id": "#/properties/data/items/properties/id",
            "type": "string",
            "title": "The Id Schema",
            "default": "",
            "examples": [
              "1"
            ],
            "pattern": "^(.*)$"
          },
          "type": {
            "$id": "#/properties/data/items/properties/type",
            "type": "string",
            "title": "The Type Schema",
            "default": "",
            "examples": [
              "tasks"
            ],
            "pattern": "^(.*)$"
          },
          "attributes": {
            "$id": "#/properties/data/items/properties/attributes",
            "type": "object",
            "title": "The Attributes Schema",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "$id": "#/properties/data/items/properties/attributes/properties/name",
                "type": "string",
                "title": "The Name Schema",
                "default": "",
                "examples": [
                  "Foo"
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "links": {
            "$id": "#/properties/data/items/properties/links",
            "type": "object",
            "title": "The Links Schema",
            "required": [
              "self"
            ],
            "properties": {
              "self": {
                "$id": "#/properties/data/items/properties/links/properties/self",
                "type": "string",
                "title": "The Self Schema",
                "default": "",
                "examples": [
                  "/api/tasks/1"
                ],
                "pattern": "^(.*)$"
              }
            }
          }
        }
      }
    },
    "jsonapi": {
      "$id": "#/properties/jsonapi",
      "type": "object",
      "title": "The Jsonapi Schema",
      "required": [
        "version"
      ],
      "properties": {
        "version": {
          "$id": "#/properties/jsonapi/properties/version",
          "type": "string",
          "title": "The Version Schema",
          "default": "",
          "examples": [
            "1.0"
          ],
          "pattern": "^(.*)$"
        }
      }
    }
  }
}
